<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/p_icon_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/search_et_shap"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/p_name_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/p_icon_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/p_icon_iv"
        android:ellipsize="end"
        android:lines="2"/>

    <TextView
        android:id="@+id/p_buycount_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/p_name_iv"
        android:layout_below="@id/p_name_iv"
        android:layout_marginTop="8dp"
        android:textColor="#999B9E"/>

    <TextView
        android:id="@+id/p_price_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/p_buycount_iv"
        android:layout_marginRight="15dp"
        android:textColor="#F00"
        android:textSize="18sp"/>

</RelativeLayout>

